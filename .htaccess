RewriteEngine On
RewriteBase /~andy.driver/pagezero
RewriteRule ^$ controllers/home.php [QSA,L]
RewriteRule ^blog$ controllers/blog.php [QSA,L]
RewriteRule ^blog/(?P<year>\d{4})/(?P<month>\d{2})/(?P<day>\d{2})/(?P<slug>[-a-z0-9]+)$ controllers/blog-post.php?year=$1&month=$2&day=$3&slug=$4 [QSA,L]
RewriteRule ^admin/blog/delete/(?P<id>\d+)$ controllers/admin/blog-post-delete.php?id=$1 [QSA,L]
RewriteRule ^admin/blog/edit(?:/(?P<id>\d+))$ controllers/admin/blog-post-edit.php?id=$1 [QSA,L]
RewriteRule ^admin/blog(?:/(?P<page>\d+))?$ controllers/admin/blog.php?page=$1 [QSA,L]
